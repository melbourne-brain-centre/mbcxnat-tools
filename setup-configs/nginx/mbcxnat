server {
        listen 80;
        listen [::]:80;
        server_name xnat.thembc.com.au;
        return 302 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name xnat.thembc.com.au;
    ssl_certificate /etc/ssl/xnat.thembc.com.au.pem;
    ssl_certificate_key /etc/ssl/xnat.thembc.com.au.key;
    ssl_client_certificate /etc/ssl/cloudflare.crt;
    ssl_verify_client on;

    location / {
        proxy_pass                          http://172.18.0.1:9991;
        proxy_redirect                      http://172.18.0.1:9991 $scheme://localhost;
        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-Host   $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_connect_timeout               150;
        proxy_send_timeout                  100;
        proxy_read_timeout                  100;
        proxy_buffers                       4 32k;
        client_max_body_size                0;
        client_body_buffer_size             128k;
    }
}
